<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Motion Detector with Camera</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 0;
            padding: 0;
        }
        video {
            width: 80%;
            height: auto;
            margin-top: 20px;
        }
        canvas {
            display: none;
        }
        #status {
            margin-top: 20px;
            font-size: 1.2em;
            color: green;
        }
    </style>
</head>
<body>
    <h1>Motion Detection with Camera</h1>

    <video id="video" autoplay></video>
    <canvas id="canvas"></canvas>

    <div id="status">Waiting for motion...</div>

    <script>
        const video = document.getElementById('video');
        const canvas = document.getElementById('canvas');
        const context = canvas.getContext('2d');
        const status = document.getElementById('status');

        // Access the user's webcam
        navigator.mediaDevices.getUserMedia({ video: true })
            .then(stream => {
                video.srcObject = stream;
                video.play();
            })
            .catch(err => {
                console.error("Error accessing the camera: ", err);
            });

        let lastImageData;

        function detectMotion() {
            // Draw the video frame onto the canvas
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            context.drawImage(video, 0, 0, canvas.width, canvas.height);

            const currentImageData = context.getImageData(0, 0, canvas.width, canvas.height);

            // Compare current and last frame (simple pixel comparison)
            if (lastImageData) {
                const diff = pixelDifference(lastImageData.data, currentImageData.data);
                if (diff > 10000) {  // Adjust threshold for motion sensitivity
                    status.innerText = "Motion detected!";
                    status.style.color = 'red';
                } else {
                    status.innerText = "No motion";
                    status.style.color = 'green';
                }
            }

            lastImageData = currentImageData;
            requestAnimationFrame(detectMotion);
        }

        function pixelDifference(data1, data2) {
            let diff = 0;
            for (let i = 0; i < data1.length; i += 4) {
                diff += Math.abs(data1[i] - data2[i]) +  // red
                        Math.abs(data1[i+1] - data2[i+1]) +  // green
                        Math.abs(data1[i+2] - data2[i+2]);   // blue
            }
            return diff;
        }

        video.addEventListener('play', () => {
            detectMotion();
        });
    </script>
</body>
</html>
